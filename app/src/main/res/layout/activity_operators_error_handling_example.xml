<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_error_handling_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This example demonstrates how to deal with error handling using RxJava. For all examples, when source (that emits numbers randomicaly) emits a number greater than seven, an exception is thrown, and will be treated using different approaches. You need to check the log for details." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Emitted values:"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_emitted_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_start_unchecked_exception_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Start Unchecked Exception Test "
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_start_checked_exception_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Checked Exception Test"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_start_onerrorreturn_operator_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start onErrorReturn() Test"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_start_onerrorresumenext_operator_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start onErrorResumeNext() Test"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_start_onexceptionresumenext_operator_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start onExceptionResumeNext() Test"
                    android:textAllCaps="false" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>